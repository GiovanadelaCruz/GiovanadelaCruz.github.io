{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Brazil's golden oldie blowout",
    "subtitle": ["Pension Spending vs Aging Population", "Latest available", "", ""],
    "font": "Arial",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start",
    "offset": 5,
    "color": "#08090c"
  },
  "width": 300,
  "height": 210,
  "padding": {"top": 25, "bottom": 10, "left": 25, "right": 30},
  "config": {"view": {"stroke": null}},
  "background": "#cddee6",
  "data": {
    "url": "https://raw.githubusercontent.com/GiovanadelaCruz/GiovanadelaCruz.github.io/main/w4_charts.csv",
    "format": {
      "type": "csv",
      "parse": {
        "pp_pop_65_over": "number",
        "gov_spending_pension_gdp": "number"
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "point",
        "size": 120,
        "filled": true,
        "strokeWidth": 1
      },
      "encoding": {
        "x": {
          "field": "pp_pop_65_over",
          "type": "quantitative",
          "title": "Population aged 65 years and over, as % of total",
          "scale": {"domain": [0, 30]},
          "axis": {
            "grid": true,
            "ticks": false,
            "gridOpacity": 0.8,
            "gridColor": "#f4fbfc",
            "gridWidth": 0.5,
            "titleFontStyle": "italic",
            "titleFontWeight": "normal",
            "titleFontSize": 13,
            "labelFontSize": 10.5,
            "labelExpr": "(datum.value)+'%'"
          }
        },
        "y": {
          "field": "gov_spending_pension_gdp",
          "type": "quantitative",
          "title": ["Government spending", "on pension benefits", "% of GDP"],
          "scale": {"domain": [0, 20]},
          "axis": {
            "grid": true,
            "ticks": false,
            "gridOpacity": 0.8,
            "gridColor": "#f4fbfc",
            "gridWidth": 0.5,
            "titleFontStyle": "italic",
            "titleFontWeight": "normal",
            "titleFontSize": 13,
            "labelFontSize": 10.5,
            "values": [0, 5, 10, 15, 20],
            "titleAngle": 0,
            "titleAlign": "left",
            "titleAnchor": "start",
            "titleBaseline": "top",
            "titleX": 0,
            "titleY": -50,
            "labelExpr": "(datum.value)+'%'"
          }
        },
        "color": {
          "condition": [
            {
              "test": "indexof(['OECD average', 'Brazil', 'Turkey', 'Mexico', 'South Korea', 'Greece', 'Italy', 'Japan', 'Poland'], datum.country) >= 0",
              "value": "#0ab6f7"
            }
          ],
          "value": "#92d0e8"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "dx": -5,
        "dy": -10,
        "fontSize": 13,
        "font": "Arial",
        "align": "right"
      },
      "transform": [
        {
          "filter": "indexof(['Brazil', 'Turkey', 'Mexico', 'South Korea', 'Greece', 'Italy', 'Japan', 'Poland', 'OECD average'], datum.country) >= 0"
        }
      ],
      "encoding": {
        "x": {"field": "pp_pop_65_over", "type": "quantitative"},
        "y": {"field": "gov_spending_pension_gdp", "type": "quantitative"},
        "text": {"field": "country"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "fontSize": 13,
        "font": "Arial",
        "dx": 120,
        "dy": 165,
        "color": "#08090c",
        "stroke": null,
        "strokeWidth": 0
      },
      "encoding": {
        "text": {"value": "Sources: OECD; World Bank; Previdencia Social"}
      }
    }
  ]
}
